<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f4f4f4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/statusBarColor">

        <ImageButton
            android:id="@+id/imgbut_back"
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/tjt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="拒绝理由"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="提交"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_reject1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_reject1"
            android:background="@mipmap/wxz"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="18dp" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="理由不充分"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f2f2f2" />

    <LinearLayout
        android:id="@+id/ll_reject2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_reject2"
            android:background="@mipmap/xz"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="18dp" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="非质量问题"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f2f2f2" />

    <LinearLayout
        android:id="@+id/ll_reject3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_reject3"
            android:background="@mipmap/wxz"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="18dp" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故意刁难"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f2f2f2" />

    <LinearLayout
        android:id="@+id/ll_reject4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_reject4"
            android:background="@mipmap/wxz"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="18dp" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未达成一致"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>