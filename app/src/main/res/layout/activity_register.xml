<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bc_register"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/per_" />

        <EditText
            android:id="@+id/edt_mob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/login_edit"
            android:digits="0123456789"
            android:hint="输入手机号码"
            android:inputType="number"
            android:lines="1"
            android:maxLength="11"
            android:paddingLeft="17dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/text666" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="33dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/yaz_" />

        <EditText
            android:id="@+id/edt_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="6dp"
            android:layout_weight="2"
            android:background="@drawable/login_edit"
            android:digits="0123456789"
            android:hint="输入验证码"
            android:inputType="number"
            android:lines="1"
            android:paddingLeft="17dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/text666" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/yzm_edt"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="33dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/mima_" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="6dp"
            android:layout_weight="2"
            android:background="@drawable/login_edit"
            android:digits="0123456789"
            android:hint="输入新密码"
            android:inputType="number"
            android:lines="1"
            android:paddingLeft="17dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/text666" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rb_reg"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/radio"
            android:button="@null"
            android:checked="true" />

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="注册即表示同意"
            android:textColor="@color/d8a5ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《商家联盟网络服务协议》"
            android:textColor="@color/d562fe"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_bg"
        android:text="提交"
        android:textColor="@color/colorWhite" />

</LinearLayout>
