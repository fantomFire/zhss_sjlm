<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/ed3b0b"
        android:textSize="18dp"
        android:textStyle="bold" />

    <View
        android:layout_width="260dp"
        android:layout_height="1dp"
        android:background="@color/text_ec" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="确认删除该商品？"
        android:textColor="@color/colorBlack"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_bottom_left"
            android:gravity="center"
            android:text="否"
            android:textColor="@color/text666"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_bottom_righ"
            android:gravity="center"
            android:text="是"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>